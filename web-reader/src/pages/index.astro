---
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';

const entries = await getCollection('english-translation-drafts');
const files = entries
  .map(entry => ({
    id: entry.id,
    date: entry.id.split('-').slice(0, 3).join('-')
  }))
  .sort((a, b) => a.date.localeCompare(b.date));
---

<Layout title="The Archeometer - English Translation">
  <div class="bg-white shadow sm:rounded-lg">
    <div class="px-4 py-5 sm:p-6">
      <h1 class="text-2xl font-bold text-gray-900 mb-6">English Translation Draft</h1>
      <div class="space-y-4">
        {files.map(({ id }) => (
          <a 
						href={`/english-translation-drafts/${id}`}
						class="flex border-l-4 border-indigo-500 bg-indigo-50 p-4"
					>
            <span
              class="text-lg font-medium text-indigo-700 hover:text-indigo-900"
            >
              {id}
            </span>
          </a>
        ))}
      </div>
    </div>
  </div>
</Layout>
